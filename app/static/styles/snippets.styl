@require 'elf'
@require 'rupture'

margem = 1em 2em 0
texto_sem_destaque = #adadad
texto_ativo = #333
texto_hover = darken(#cf7f00, 20%)

#snippets_page
    background #f0f6f0
    article
        margin margem

nav.choices
nav.languages
    overflow hidden
    font-weight normal
    margin margem
    a
        color texto_sem_destaque
        border-left 1px solid #ccc
        padding 0.75em
        display inline-block
        float left
        &:first-child
            border 0
        &.active
            color texto_ativo
            &:hover
                color texto_ativo
        &:hover
            color texto_hover

section.project
    border-bottom 1px solid #d5d5d5;
    border-top 1px solid #fff;
    padding 0.5rem 0 0.5rem
    display flex
    align-items baseline
    justify-content space-between
    h1
        margin 0
    p
        margin 0
        color #5a5a5a
        font-size 0.9em
        font-style italic
    a
        font-size 1.25rem
        color texto_ativo
        &:hover
            color texto_hover
    i
        cursor pointer
        color texto_sem_destaque
        &:hover
            color texto_hover
    .show_detail
        display none
    &.detail-hidden
        .detail
            display none
        .show_detail
            display inherit
    div.project
        flex-grow 2
    .expand_contract
        margin 0 1em
    .visited_time
        text-align right

span.tag
    color #cf7f00
    text-transform capitalize
    font-size 0.9em

div.highlight
div.linenodiv
    pre
        background-color #000
        color #ddd
        padding 0.5em
        margin-top 0.3em
        line-height 1.3em
        +mobile()
            font-size 0.8em
        +tablet()
            font-size 0.9em

div.linenodiv
    pre
        color #b6b6b6
        background-color lighten(#000, 10%)
