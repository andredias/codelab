@require 'elf'
@require 'rupture'
@require 'colors'

rupture.enable-em-breakpoints = true
fundo = swatches.clouds
header_color = lighten(#1d1d1d, 50%)

html
    line-height 1.5em
    text-rendering optimizeLegibility
    font-family "Open Sans", Helvetica, sans-serif

a
    text-decoration none
    cursor pointer

section
    overflow hidden

body#landing_page
    background linear-gradient(#0d86b3, #11a9e2)
    section
        overflow hidden
        padding 0 2em

    #execute
    .execute-example
        background-color rgba(255, 255, 255, 0.8)
        margin 0

    #execute
        .description
            column(2/5)
            +below(rupture.desktop-cutoff)
                column(1)
        .fig
            column(3/5)
            align-children(both)
            +below(rupture.desktop-cutoff)
                column(1)
        div
            column(1)

    div.example
        article
            column(1/3)
            +below(rupture.desktop-cutoff)
                column(1)

    #improve-share
        background rgba(255, 255, 255, 1)
        div
            column(1/2)
            +mobile()
                column(1)

    p
        color #333
        +mobile()
            font-size 0.9em
        a
        a:visited
            color #2727A1

    h1
    h2
    h3
        font-weight normal
        margin-bottom 0

    pre
        min-height 10em

    .slogan
        h1
            font-size 6em
            +mobile()
                font-size 4em
            +tablet()
                font-size 5em
        h2
            font-size 3em
            text-align center
            margin 2em 0 2em
            font-weight normal
            line-height normal
            +mobile()
                font-size 1.5em
            +tablet()
                font-size 2.2em
            span
                color #fff
                text-shadow 4px 4px 6px rgba(0,0,0,0.5)

header
    align-children(vertical)
    background linear-gradient(#333, #1d1d1d)
    color header_color
    h1
        font-size 1rem
        text-shadow 2px 2px 2px rgba(0,153,255,1)
        margin 0.75em 1em
        color white
        display inline-block
    a:visited
        color white
    +below(rupture.desktop-cutoff)
        display block
        overflow hidden
    .logo
        column(1/4)
        font-size 1.5em
        color #222
        +below(rupture.desktop-cutoff)
            column(1)
            margin-bottom 15px


.languages nav
    overflow hidden
    margin 0 32% 3em
    +below(rupture.desktop-cutoff)
        margin 0
        margin-bottom 2em
    div
        column(1/2)
        cycle(2)
        margin-bottom 30px
        +mobile()
            margin-bottom 1px
            column(1)
            cycle(1)
    a
        display block
        box-shadow 0 3px 3px 0px rgba(0, 0, 0, 0.4)
        text-shadow 1px 1px 0px white
        background rgba(255, 255, 255, 0.9)
        padding 6px 12px
        color #444
        &:hover
        &:active
        &:focus
            color black
            background rgba(255, 255, 255, 0.8)
            transition background .5s ease
        &:active
            box-shadow 0px 1px 1px 1px rgba(0,0,0,0.2) inset, 0px 1px 1px 0 rgba(255,255,255,1)
        img
        span
            vertical-align middle
        img
            height 2em
            padding-right .7em

footer.page
    overflow hidden
    background linear-gradient(#222, #121212)
    box-shadow 0 8px 4px 0 rgba(0,0,0,0.5) inset
    margin 0
    padding 1.5em 0 1.5em
    section
        column(1/4)
        +mobile()
            column(1)
        nav
            margin 0.5em 1em 0
            a
                display block
                color darken(white, 50%)
                line-height 1.3rem
                font-size 0.9em
                font-weight bolder
                &:hover
                    color white
                +mobile()
                    line-height 2.5em
        nav.social
            a
                display inline-block
                color white
                padding 0.75em
                line-height 1em
                float left
                &.facebook
                    background #3B5998
                &.twitter
                    background #55ACEE
                &.google-plus
                    background #DD4B39
                i
                    font-size 1.5em
            span
                display none

    div.copyright
        offset(1/4)
        column(1/4)
        +mobile()
            column(1)
            offset(0)
        text-align right
        color darken(white, 60%)
        font-size 0.9em
        padding 0.5em 1em
        box-sizing border-box
        a
            color darken(white, 40%)
            font-weight bolder

#landing_page > footer.page
    margin 0



.hidden
    display none !important