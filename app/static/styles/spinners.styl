tempo = 1.2s

barras(tempo, qtd)
    atraso = -1 * tempo
    step = 0.1s
    for num in (2..qtd)
        atraso = atraso + step
        div:nth-child({num})
            animation-delay atraso

.spinner
    border none
    margin 0 auto
    height 50px
    text-align center
    font-size 10px  // influencia no espaÃ§amento entre as barras
    & > div
        height 100%
        width 10px
        display inline-block
        animation stretchdelay tempo infinite ease-in-out
    barras(tempo, 10)

@keyframes stretchdelay
    0%
    40%
    100%
        background-color #2e5865
        transform scaleY(0.8)
        box-shadow 0 0 0 rgba(10, 10, 10, .1)
    20%
        background-color #00b192
        transform scaleX(1)
        box-shadow 0 5px 6px rgba(10, 10, 10, .4)
