@require 'elf'
@require 'rupture'
@require 'colors'

rupture.enable-em-breakpoints = true
cor_menu = swatches.clouds
cor_fonte_status = darken(swatches.clouds, 25%)
cor_painel = swatches.concrete
pumpkin = swatches.pumpkin

article.editor
    column(1)

section.editor
    column(1)
    overflow hidden
    position relative
    header
        align-children(vertical)
        margin-bottom 0
        background cor_menu
    div#editor
        float left
        width 100%
        height 25em
        font-size 1em
    footer
        background transparent
        font-size 0.75em
        color cor_fonte_status
        position absolute
        bottom 0
        right 1.5em
        div
            display inline-block
            padding 0.5em
            a
                color cor_fonte_status
        .linecol
            min-width 3.5em
            text-align right

aside.results
    color red
    position absolute
    top -2px
    right 0
    width 2em
    nav
        transform rotate(90deg)
        transform-origin bottom left
        transform-style preserve-3d
        width 10000px
        background cor_painel
    a
        display inline-block
        padding 0.5em 1em
        font-size 0.75em
        line-height 1.5em
        color lighten(cor_painel, 85%)
        &:hover
            color white
            background pumpkin


article.input_output
    overflow hidden
    h1
        font-size 1em
    section.input
        column(1/4)
        textarea
            background cor_status
    section.output
        column(3/4)
        textarea
            width 100%
            box-sizing border-box
            background black
            color white

article.lint-metrics
    overflow hidden
    h1
        font-size 1em
    section
        column(1/2)
        textarea
            width 100%
            box-sizing border-box
            background black
            color white