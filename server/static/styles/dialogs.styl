
.modal_dialog

    // This is modal bg
    &:before
        content ""
        display none
        background rgba(0, 0, 0, .6)
        position fixed
        top 0
        left 0
        right 0
        bottom 0
        z-index 100
    &.active
        &:before
        .dialog
            display block
    > div
        display none
        z-index 101
        background #fefefe
        border solid 1px #eee
        border-radius 5px
        position fixed
        left 50%
        top 50%
        width 50%
        max-width 100%
        max-height 90%
        overflow auto
        transform translateX(-50%) translateY(-50%)


label
    display block