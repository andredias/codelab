// http://tympanus.net/codrops/2013/05/08/responsive-retina-ready-menu/
@require 'colors'

fundo = swatches.clouds

menu_colors(colors)
    for value, i in values(colors)
        &:nth-child({length(colors)}n+{i})
            background value

menu_darken_colors(colors, border=true)
    for value, i in values(colors)
        &:nth-child({length(colors)}n+{i})
            a:hover
            a:active
            a:focus
                if border
                    border-bottom 4px solid darken(value, 30%)
                else
                    background darken(value, 30%)

nav
    a
        text-decoration none
        cursor pointer


nav.languages
    div
        display inline-block
        box-shadow 0 1px 3px 0px rgba(0, 0, 0, 0.4)
        text-shadow 1px 1px 0px white
        background fundo
    a
        display block
        padding 6px 12px
        color #777
        &:hover
        &:active
        &:focus
            color black
            background darken(fundo, 10%)
            font-weight bolder
            transition all .5s ease
        &:active
            box-shadow 0px 1px 1px 1px rgba(0,0,0,0.2) inset, 0px 1px 1px 0 rgba(255,255,255,1)
        img
        span
            vertical-align middle
        img
            height 2em

+mobile()
    nav.languages
        div
            min-width s('calc')

