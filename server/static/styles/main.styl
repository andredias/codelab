@require 'elf'
@require 'rupture'
@require 'colors'

rupture.enable-em-breakpoints = true
fundo = swatches.clouds
header_color = lighten(#1d1d1d, 50%)

html
    line-height 1.5em
    text-rendering optimizeLegibility

a
    text-decoration none

body#landing_page
    padding 0 2em
    background linear-gradient(#0d86b3, #11a9e2)

header
    align-children(vertical)
    background linear-gradient(#333, #1d1d1d)
    color header_color
    h1
        font-size 1rem
        text-shadow 2px 2px 2px rgba(0,153,255,1)
        margin 0.75em 1em
        color white
    a:visited
        color white
    +below(rupture.desktop-cutoff)
        display block
        overflow hidden
    .logo
        column(1/4)
        font-size 1.5em
        color #222
        +below(rupture.desktop-cutoff)
            column(1)
            margin-bottom 15px
    nav
        column(2/4)
        offset(1/4)
        +tablet()
            column(1)
            offset(0)
        a
            span(1/3)
            text-align center
            padding 10px 0
            background lighten(red, 40%)
            color white
            &:first-child
                border-radius 6px 0 0 6px
            &:last-child
                border-radius 0 6px 6px 0

section
    overflow hidden

h2
    font-size 3em
    text-align center
    margin 2em 0 2em
    font-weight normal
    span
        color #CFCFCF
        text-shadow 4px 4px 6px rgba(0,0,0,0.5)

.languages nav
    overflow hidden
    margin 0 35% 3em
    div
        column(1/2)
        cycle(2)
        margin-bottom 30px
        +mobile()
            column(1)
            cycle(1)
    a
        display block
        box-shadow 0 3px 3px 0px rgba(0, 0, 0, 0.4)
        text-shadow 1px 1px 0px white
        background fundo
        padding 6px 12px
        color #777
        &:hover
        &:active
        &:focus
            color black
            background darken(fundo, 10%)
            transition background .5s ease
        &:active
            box-shadow 0px 1px 1px 1px rgba(0,0,0,0.2) inset, 0px 1px 1px 0 rgba(255,255,255,1)
        img
        span
            vertical-align middle
        img
            height 2em
            padding-right .7em

footer.page
    overflow hidden
    background linear-gradient(#222, #121212)
    box-shadow 0 8px 4px 0 rgba(0,0,0,0.5) inset;
    margin 0
    padding 1.5em 0 1.5em
    section
        column(1/4)
        +mobile()
            column(1)
        nav
            margin 0.5em 1em 0
            a
                display block
                color darken(white, 50%)
                line-height 1.2rem
                font-size 0.9em
                font-weight bolder
                &:hover
                    color white
    div.copyright
        offset(1/4)
        column(1/4)
        text-align right
        color darken(white, 60%)
        font-size 0.9em
        padding 0.5em 1em
        box-sizing border-box

#landing_page > footer.page
    margin 1em -2em 0
