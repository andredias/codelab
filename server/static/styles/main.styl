@require 'elf'
@require 'rupture'
@require 'colors'

rupture.enable-em-breakpoints = true
fundo = swatches.clouds

html
    padding 0 30px
    line-height 1.5em

a
    text-decoration none

header
    align-children(vertical)
    margin-bottom 30px
    +below(rupture.desktop-cutoff)
        display block
        overflow hidden
    .logo
        column(1/4)
        font-size 1.5em
        color #222
        +below(rupture.desktop-cutoff)
            column(1)
            margin-bottom 15px
    nav
        column(2/4)
        offset(1/4)
        +tablet()
            column(1)
            offset(0)
        a
            span(1/3)
            text-align center
            padding 10px 0
            background lighten(red, 40%)
            color white
            &:first-child
                border-radius 6px 0 0 6px
            &:last-child
                border-radius 0 6px 6px 0

section
    overflow hidden

nav.languages
    overflow hidden
    div
        column(1/4)
        cycle(4)
        margin-bottom 30px
        +tablet()
            column(1/2)
            cycle(2)
        +mobile()
            column(1)
            cycle(1)
    a
        display block
        box-shadow 0 1px 3px 0px rgba(0, 0, 0, 0.4)
        text-shadow 1px 1px 0px white
        background fundo
        padding 6px 12px
        color #777
        &:hover
        &:active
        &:focus
            color black
            background darken(fundo, 10%)
            font-weight bolder
            transition all .5s ease
        &:active
            box-shadow 0px 1px 1px 1px rgba(0,0,0,0.2) inset, 0px 1px 1px 0 rgba(255,255,255,1)
        img
        span
            vertical-align middle
        img
            height 2em
            padding-right .7em

footer.page
    overflow hidden
    background blue
    div.footer
        overflow hidden
        background green
    section
        column(1/2)
        +mobile()
            column(1)
        nav
            margin 0.5em 1em 0
            a
                display block
                color darken(white, 20%)
                line-height 1.2rem
                font-size 0.9em
                &:hover
                    color white

#editor
    width 100%
    height 14em

