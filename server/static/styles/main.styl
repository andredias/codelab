@import 'normalize'
@import 'color'
@import 'buttons'
@import 'elf'
@import 'rupture'

rupture.enable-em-breakpoints = true

html
  padding: 2rem
  font-weight: 100
  line-height: 1.5
  +tablet()
    font-size: 20px


#editor
    width 100%
    height 14em


.message
    padding: 10px
    font: 1rem Helvetica
    border: 1px solid #eee

.warning
    @extends .message
    border-color: yellow
    background: yellow + 70%

.error
    @extends .message
    border-color: red
    background: red + 70%

.fatal
    @extends .error
    font-weight: bold
    color: red

.some-ui-element
  width: 50%
  float: left
  +below(500px)
    width: 100%
    float: none