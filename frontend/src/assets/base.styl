apagado = darken(white, 30%)
title_color = black
cor_texto = #4b5563
destaque_color = #1ba94c
secondary_color = #5336ee
cor_titulo = darken(cor_texto, 50%)
background_color = #f9f8f6
border_color = #c7c7c7

html
    text-rendering optimizeLegibility
    font-family "Open Sans", Helvetica, sans-serif
    color cor_texto
    line-height 1.5

body
    font-size 0.9rem

common_header_footer()
    background linear-gradient(#222, #121212)
    padding 1rem 0
    color apagado

shadow()
    box-shadow 0 1px 3px 1px rgba(0, 0, 0, 0.2)

monospace()
    font-family 'Fira Code', monospace

flex-center()
    display flex
    justify-content center
    align-items center
    gap 1rem


textarea
    shadow()
    border none
    resize none

input
textarea
    color black

label
.link
    cursor pointer

    &:hover
        svg
            stroke destaque_color



.btn
    padding 1rem 1.25rem
    font-weight 600
    border-radius 0.25rem
    transition all 0.1s ease-in
    box-shadow 0px 1px 3px 1px rgba(0, 0, 0, 0.3)
    text-transform capitalize

    &:hover
        transform translateY(-2px)

.btn-slim
    padding 0.5rem 0.75rem


.btn-primary
    box-shadow 0px 1px 3px 1px rgba(darken(destaque_color, 30%), 0.5)
    background-color destaque_color
    color lighten(destaque_color, 90%)

.btn-secondary
    box-shadow 0px 1px 3px 1px rgba(darken(secondary_color, 30%), 0.5)
    background-color secondary_color
    color lighten(secondary_color, 90%)

.btn-tertiary
    background-color white

.btn-disabled
    background-color transparent
    color lighten(cor_texto, 70%)

.btn-cancel
    color lighten(cor_texto, 20%)

    &:hover
        color cor_texto


twitter_blue = rgb(59, 130, 246)

a.twitter
    color twitter_blue


.CodeMirror
    height auto
    min-height 40ch
    monospace()

.CodeMirror-scroll
    min-height 40ch
    max-height 80vh


input
textarea.description
    width 100%
    margin-top 1rem
    border none
    background transparent
    box-shadow none
    padding 0
    color cor_texto

input
    shadow()


a
    color inherit
    text-decoration inherit


#app
    display flex
    flex-direction column
    min-height 100vh
    background-color background_color


.miolo
    flex 1 0 auto
