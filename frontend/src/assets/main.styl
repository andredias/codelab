@require base

header.main
    common_header_footer()

    section
        display flex
        justify-content space-between

        nav
            a.router-link-active
                border-bottom 1px solid destaque_color
                color white

            *:hover
                color white

            & > * + *
                margin-left 2rem

footer.main
    common_header_footer()

    section
        display flex
        justify-content space-between
        align-items center

        nav
            display grid

.dojo
    background-color background_color

    .header-container
        background-color white
        box-shadow 0px 1px 2px rgba(0, 0, 0, 0.1)

        header
            max-width 1024px
            padding 1rem 30px
            display flex
            justify-content space-between
            align-items center

            h3
                font-size 0.8rem
                color cor_texto

                * + *
                    &::before
                        content '>'
                        color cor_texto
                        padding 0 0.5rem

    a:hover
    .link:hover
        color destaque_color

    main
        margin 0 auto
        padding 1rem 0
        width 70vw
        display flex
        flex-flow column
        gap 1rem
        // display grid
        // grid-template-columns 2fr 1fr
        // gap 1rem
        // grid-template-areas "projeto       stats" \
        //                     "editor        lint" \
        //                     "input-output  ."


        h1
        h2
            color cor_titulo
            font-size 1.2rem
            font-weight 600
            margin 1rem 0 0.5rem

        h2
            font-size 1rem


        .projeto
            grid-area projeto
            position relative

            .titulo
                display flex
                justify-content space-between
                align-items center

        .editor
            grid-area editor
            padding 0

            .cursor
                background white
                monospace()
                font-size 0.9rem
                color cor_texto
                display flex
                justify-content space-between
                padding 0.25rem 1rem

                &.light
                    background #efefef

                a.selected
                    border-bottom 1px solid

                div
                    * + *
                        margin-left 1rem

                span.cursor_pos
                    min-width 3ch
                    display inline-block
                    text-align right
                    margin-left 0

                span.programming_language
                    text-transform capitalize

        .input-output
            grid-area input-output

            label
                padding-left 0.5rem

            textarea.code
                display block
                margin-top 0.5rem
                resize none
                height 40ch
                width 100%
                font-size 0.9rem
                line-height 1.25rem
                monospace()

            .upload-run
                display flex
                justify-content space-between
                align-items start

            .input
                margin-top 1rem

        .stats
            grid-area stats

        .lint
            grid-area lint


.edit_project_description
    display flex
    flex-direction column
    justify-content space-between

    label
        color cor_titulo
        font-size 1rem
        font-weight 600
        margin 0.75rem 0 0.25rem

    div
        display flex
        gap 0.5rem
        margin-top 1rem

    input
        margin 0

.box
    shadow()

svg.icon
    width 24px
    height 24px
    display inline-block
