@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&family=Fira+Codedisplay=swap')

html
    text-rendering optimizeLegibility
    font-family "Open Sans", Helvetica, sans-serif

common_header_footer()
    background linear-gradient(#222, #121212)
    padding 1rem 30px
    color apagado

apagado = darken(white, 30%)
title_color = black
cor_texto = #738f93
destaque_color = #1ba94c
cor_titulo = darken(cor_texto, 50%)

p
a
    color cor_texto

p
    font-size 0.9rem

header.main
    common_header_footer()

    section
        display flex
        justify-content space-between

        nav a.router-link-active
            border-bottom 1px solid destaque_color
            color white

        nav a:hover
            color white

        a + a
            margin-left 2rem

footer.main
    common_header_footer()

    section
        display flex
        justify-content space-between
        align-items center

        nav
            display grid

.dojo
    background-color #f3f7f7

    .header-container
        background-color white
        box-shadow 0px 1px 2px rgba(0, 0, 0, 0.1)

        header
            max-width 1024px
            padding 1rem 30px
            display flex
            justify-content space-between
            align-items center

            h3
                font-size 0.8rem
                color cor_texto

                a:hover
                    color destaque_color

                * + *
                    &::before
                        content '>'
                        color cor_texto
                        padding 0 0.5rem


    main
        padding 1rem 30px
        display grid
        grid-template-columns 2fr 1fr
        grid-gap 1rem
        grid-template-areas "projeto       stats" \
                            "editor        lint" \
                            "input-output  ."


        h1
            color cor_titulo
            font-size 1.2rem
            font-weight 700
            margin 1rem 0 0.25rem

        h2
            color title_color
            font-size 1rem
            font-weight 600
            padding-bottom 0.25rem

        .projeto
            grid-area projeto
            position relative

            .titulo
                display flex
                justify-content space-between
                align-items center

            svg
                stroke cor_texto
                &:hover
                    stroke destaque_color
                    cursor pointer

        .descricao
            background white
            padding 1.5rem

        .box
            box-shadow 0px 1px 3px 1px rgba(0, 0, 0, 0.1)


        .editor
            grid-area editor
            padding 0

            .cursor
                background white
                font-family 'Fira Code', monospace
                font-size 0.9rem
                color cor_texto
                display flex
                justify-content space-between
                padding 0.25rem 1rem

                a.selected
                    border-bottom 1px solid

                div
                    * + *
                        margin-left 1rem

        .input-output
            grid-area input-output

            label
                padding-left 0.5rem
                color cor_texto

            textarea
                display block
                margin-top 0.5rem
                resize none
                height 10ch
                width 100%
                max-width 100%

            .upload-run
                display flex
                justify-content space-between
                align-items start

        .stats
            grid-area stats

        .lint
            grid-area lint


.CodeMirror
    height auto
    min-height 40ch
    font-family 'Fira Code', monospace

.CodeMirror-scroll
    min-height 40ch
    max-height 80ch

.btn
    padding 1rem 1.25rem
    font-weight 600
    border-radius 0.5rem
    transition all 0.1s ease-in
    box-shadow 0px 1px 3px 1px rgba(0, 0, 0, 0.3)

    &:hover
        background-color desaturate(destaque_color, 40%)
        transform translateY(-2px)


.btn-primary
    box-shadow 0px 1px 3px 1px rgba(darken(destaque_color, 30%), 0.5)
    background-color destaque_color
    color lighten(destaque_color, 90%)

svg.icon
    width 24px
    height 24px
    display inline-block
