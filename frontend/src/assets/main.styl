@require base

header.main
    common_header_footer()

    section
        display flex
        justify-content space-between

        h1.logotipo a
            text-decoration none
            font normal 24px/1 "Patua One", cursive
            color white


        nav
            a.router-link-active
                border-bottom 1px solid destaque_color
                color white

            *:hover
                color white

            & > * + *
                margin-left 2rem

footer.main
    common_header_footer()

    section
        display flex
        justify-content space-between
        align-items center

        nav
            display grid

    h1
    p
        font-size inherit
        font-weight inherit
        margin 0

.dojo
    background-color background_color

    a:hover
    .link:hover
        color destaque_color

    margin 0 auto
    padding 1rem 0
    width 70vw
    display flex
    flex-flow column
    gap 1rem


    h1
    h2
        color cor_titulo
        font-size 1.2rem
        font-weight 600
        margin 1rem 0 0.5rem

    h2
        font-size 1rem


    .menu
        position relative

        .titulo
            display flex
            justify-content space-between
            align-items center

    .editor
        padding 0

        .cursor
            background white
            monospace()
            font-size 0.9rem
            color cor_texto
            display flex
            justify-content space-between
            padding 0.25rem 1rem

            &.light
                background #efefef

            a.selected
                border-bottom 1px solid

            div
                * + *
                    margin-left 1rem

            span.cursor_pos
                min-width 3ch
                display inline-block
                text-align right
                margin-left 0

            span.programming_language
                text-transform capitalize

    .input-output

        label
            padding-left 0.5rem

        textarea.code
            display block
            margin-top 0.5rem
            resize none
            min-height 10ch
            width 100%
            font-size 0.9rem
            line-height 1.25rem
            monospace()

        .upload-run
            display flex
            justify-content end

        .input
            margin-top 1rem


.edit_project_description
    display flex
    flex-direction column
    justify-content space-between

    label
        color cor_titulo
        font-size 1rem
        font-weight 600
        margin 0.75rem 0 0.25rem

    div
        display flex
        gap 0.5rem
        margin-top 1rem

    input
        margin 0

.box
    shadow()

svg.icon
    width 24px
    height 24px
    display inline-block

.documentation
    padding 1rem 30px

    h1
        color cor_titulo
        font-size 2rem
        font-weight 600
        text-align center

    ol
        counter-reset item

        li
            display flex
            counter-increment item
            margin-top 1rem
            color cor_texto

            &:before
                margin-right 10px
                content counter(item)'.'
                color destaque_color
                font-weight 600

    em
        font-weight 600
        color cor_texto

    a
        color destaque_color

.terms_of_use
    display grid
    grid-template-columns 2fr 3fr
    align-items center
